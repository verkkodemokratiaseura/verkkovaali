<html xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="main.macros['master']">
<head></head>
<body>
  <metal:main fill-slot="main">
  <section i18n:domain="WebIdentity">
    <h2 i18n:translate="">Reset password</h2>

    <form action="${action_url}" method="post">
      <p>
        <label for="username"
               i18n:translate="">Username</label>
      </p>
      <input type="text" name="username"
             placeholder="Enter username" id="username"
             i18n:attributes="placeholder placeholder_enter_username;"/>

      <p class="form-actions">
        <input type="submit" id="submit-change-password" name="form.submitted" value="Reset password"
               i18n:attributes="value"/>
      </p>
    </form>

  </section>
  </metal:main>
</body>
</html>
